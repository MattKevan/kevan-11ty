<div class="mb-6 lg:mb-12 bg-white border border-[#000] shadow-[-4px_4px_0_-1px_white,-4px_4px_0px_black] hover:shadow-[-8px_8px_0_-1px_white,-8px_8px_0px_black] ease-in-out duration-200">
  
    <div class="p-6">
      <h3 class="text-2xl lg:text-3xl mb-3 hover:underline font-bold">
        <a href="{{ item.url | prepend: site.baseurl }}">{{ item.data.title }}</a>
      </h3>
      <p class="text-[#000] text-sm">{{ item.data.description }}</p>

      </div>
      <div class="border-t border-[#000] flex">
        <div class="border-r border-[#000] px-6 py-4">
          <p class="meta text-xs text-[#000]">{{ item.date | date: "%-d %B %Y" }}</p>
      </div>
        <div class="px-4 py-3">
      {% include 'tags' %}
      </div>
  </div>
