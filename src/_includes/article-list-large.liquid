<div class="grid md:grid gap-8 md:grid-cols-2">
    <div class="">
      <a href="{{ item.url | prepend: site.baseurl }}">
        {% if item.data.image contains "cloudinary" %}
          {% assign imgsplit = item.data.image | split: '/' %}
          <img
            src="{{ item.data.image }}"
            alt="{{ item.data.title }}"
            class="w-full">
        {% else %}
          <img
            src="{{ item.data.image }}"
            alt="{{ item.data.title }}"
            class="w-full">
        {% endif %}
      </a>
    </div>

    <div class="">
      <h3 class="text-3xl mb-3 hover:underline">
        <a href="{{ item.url | prepend: site.baseurl }}">{{ item.data.title }}</a>
      </h3>
      
      <p class="mb-3">{{ item.data.description }}</p>
      <p class="meta text-xs text-gray-700 mb-4">{{ item.date | date: "%-d %B %Y" }}</p>
      {% include 'tags' %}
    </div>
  </div>
</div>