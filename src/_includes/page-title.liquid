<div class="border-b border-[#000] flex ">
  
  <div class="border-r border-[#000] w-6 md:w-[65px] flex-none"></div>
  <div class="w-full">
    <div class="p-6">
      <h1 itemprop="name headline" class="text-3xl lg:text-4xl font-bold">{{ title }}</h1>
      {% if description %}
        <p class="text-[#000] mt-2 lg:mt-4">{{ description }}</p>
      {% endif %}
    </div>

    <div class="flex border-t border-[#000]">
      <div class="border-r border-[#000] pt-[21px] px-6 py-4">
        <p class="text-xs">{{ page.date | date: "%-d %B %Y" }}</p>
      </div>
      <div class=" px-6 py-4">
        {% for tag in categories %}
          <span class="inline-flex items-center border px-2 py-1 text-xs font-medium border-gray-950 rounded-full">{{ tag }}</span>
        {% endfor %}
      </div>
    </div>

  </div>  

</div>
<div x-data="randomBackground()" class="h-[30px] border-b border-[#000] mb-12" x-bind:style="'background-image: url(\'/images/patterns/' + imageNumber + '.png\')'"></div>