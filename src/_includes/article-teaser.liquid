<div class="teaser col-12 col-md-6 mb-4">
  <div class="card h-100">
    <a href="{{ item.url | prepend: site.baseurl }}">
      {% if item.data.image contains 'cloudinary' %}
        {% assign imgsplit = item.data.image | split: '/' %}
        <img
          src="https://res.cloudinary.com/dk3qvmifd/image/upload/c_fill,g_auto,h_400,w_600/{{ imgsplit | last }}"
          alt="{{ item.data.title }}"
          class="mb-4 full">
      {% else %}
        <img
          src="{{ item.data.image }}"
          alt="{{ item.data.title }}"
          class="mb-4">
      {% endif %}
    </a>

    <h3 class="card-title">
      <a href="{{ item.url | prepend: site.baseurl }}">{{ item.title }}</a>
    </h3>
    <p class="date">{{ item.date | date: "%-d %B %Y" }}</p>
    <p>{{ item.description }}</p>
    <p class="tags xs">

      <span>{{ item.category }}</span>

    </p>
  </div>
</div>