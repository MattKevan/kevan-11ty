<div class="border-t border-[#000] bg-white">

  {% if banner and banner != "" %}
    <div class="flex flex-col bg-center h-[calc(100vh-60px)]"><!-- banner-container -->
      <div class="flex-grow bg-center bg-cover" style="background-image: url('{{ banner }}');"></div>
  {% else %} 
    <div><!-- alt banner-container -->
      <div x-data class="bg-left-top h-[32px]" :style="'background-image: url(\'/images/patterns/' + $store.background.imageNumber + '.svg\')'"></div>
  {% endif %}
      <!-- title block -->
      <div class="border-y border-[#000] bg-white">
        <div class="max-w-6xl px-6 mx-auto">
          <div class="border-x border-[#000]">
            <!-- title -->
            <div class="p-6 ">
              <h1 itemprop="name headline" class="text-2xl font-bold lg:text-4xl">{{ title }}</h1>
              {% if description %}
                <p class="text-[#000] mt-2 lg:mt-4">{{ description }}</p>
              {% endif %}
            </div><!-- /title -->
            <!-- publish date -->
            {% if date and date != "" %}
              <div class="flex border-t border-[#000]">
                <div class="border-r border-[#000] pt-[21px] px-6 py-4">
                <p class="text-xs">{{ page.date | date: "%-d %B %Y" }}</p>
              </div><!-- /publish date -->
              <!-- meta -->
              <div class="p-4">
                {% for tag in categories %}
                  <span class="inline-flex items-center border px-2 py-1 text-xs font-medium border-[#000] rounded-full">{{ tag }}</span>
                {% endfor %}
              </div><!-- /meta -->
            {% endif %}

          </div>
        </div>
      </div><!--/title block-->
  </div><!--/banner-container-->
  <div x-data class="h-[33px] bg-left-top border-b border-[#000]" :style="'background-image: url(\'/images/patterns/' + $store.background.imageNumber + '.svg\')'"></div>
</div>

