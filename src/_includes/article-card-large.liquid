<div class="card-large mb-6 bg-white">
  <a href="{{ item.url }}">
    <img
      src="{{ item.data.image }}"
      alt="{{ item.data.title }}"
      class="w-full mb-3">
  </a>
  <h3 class="text-3xl mb-3 hover:underline">
    <a href="{{ item.url }}">{{ item.data.title }}</a>
  </h3>
  <p class="mb-3 text-gray-700">{{ item.data.description }}</p>
  <p class="meta text-xs text-gray-700 mb-4">{{ item.data.date | date: "%-d %B %Y" }}
  </p>
  {% include 'tags' %}
</div>